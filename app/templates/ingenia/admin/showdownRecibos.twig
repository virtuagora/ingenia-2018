{% set show_footer = false %}
{% set show_navbar = false %}
{# set body_class = '' #}

{% extends 'master.twig' %}

{% block title %}
  Showdown - Comprobantes/Recibos - {{project.group.name}}
{% endblock %}

{% block body %}
  <div class="container">
  <div class="section">
          <img src="/assets/img/ingenia2018.svg" class=" image" style="width:180px;">
    <br>
    <h1 class="subtitle is-2">Comprobantes de compras - Edición 2018</h1>
    <hr>
    <h2 class="title is-3">{{project.name}}</h2>
    <h2 class="subtitle is-4">Grupo - {{project.group.name}}</h2>
    <hr>
      <table class="table is-fullwidth">
      <thead>
        <th width="130px">Fecha compra</th>
        <th>Detalle</th>
        <th class="has-text-centered" width="100px">Monto</th>
        <th class="has-text-centered" width="80px">Acción</th>
      </thead>
      <tbody>
      {% for recibo in recibos %}
        <tr>
          <td>
            {{recibo.date|date('Y-m-d')}}
          </td>
          <td >{{recibo.detail}}</td>
          <td class="has-text-centered">$ {{recibo.amount|replace({".00" : ""})|number_format(0, ',', '')}}</td>
          <td class="has-text-centered">
            <a href="/admin/project/{{project.id}}/receipts/{{recibo.id}}" target="_blank" class="button is-small is-outlined is-primary"><i class="fas fa-download fa-fw"></i></a>
          </td>
        </tr>
        {% endfor %}
        {% if recibos|length == 0 %}
        <tr>
          <td colspan="4" class="has-text-centered">Aún no se cargaron recibos</td>
        </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
  </div>
{% endblock %}