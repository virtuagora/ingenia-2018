{# set show_footer = true #}
{% set show_navbar = false %}
{# set body_class = '' #}

{% block title %}
  Proyectos
{% endblock %}

{% extends 'master.twig' %}
{% block scriptshead %}
  <script async="async" defer="defer" src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.0.0/masonry.pkgd.min.js"></script>
{% endblock %}

{% block body %}
  {% include "ingenia/index/header.twig" %}
  <div class="container is-fluid">
    <section class="section">
      <catalogo get-projects-url="{{path_for('lisPro')}}">
        <div class="notification has-text-centered">
          <i class="fas fa-cog fa-spin fa-lg"></i>
          Cargando...
        </div>
      </catalogo>

      <br>
      <br>
      <br>
      <img src="{{asset('img/slogan3-dark.svg')}}" class="image is-hidden-touch" style="height: 100px; margin: 0 auto;">
      <img src="{{asset('img/slogan4-dark.svg')}}" class="image is-hidden-desktop" style="width: 250px; margin: 0 auto;">
      {% if subject.id is null %}
        <br>
        <h3 class="subtitle is-3 has-text-centered has-text-black">
          ¡No esperes más!
          <i class="em em-smiley"></i>
        </h3>
        <div class="buttons is-centered">
          <a href="{{path_for('showLogin')}}" class="button is-medium is-black is-800">
            <i class="em em-muscle"></i>&nbsp;&nbsp;¡Participá hoy inscribiendoté en INGENIA!</a>
        </div>
      {% endif %}
      <br>
      <br>
    </section>
  </div>
{% endblock %}